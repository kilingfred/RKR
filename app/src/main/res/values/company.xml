<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Company_Block">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/company_block_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="Company_TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Company_Logo">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/company_logo</item>
    </style>
    <style name="Company_Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Company_Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Company_ImageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Company_products">
        <item name="android:layout_width">0dp</item>

        <item name="android:layout_weight">1</item>
        
    </style>
</resources>